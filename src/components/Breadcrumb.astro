---
type Props = {
  title: string;
  /** "card" = subtle pill for use on experience cards (border + light text) */
  variant?: "default" | "card";
};
const { title = "Title", variant = "default" } = Astro.props;

const base =
  "flex items-center justify-center leading-none text-center select-none font-semibold w-fit";
const variants = {
  default: "bg-white text-black pt-2 pb-1 px-5 rounded-2xl",
  card: "border border-white/40 text-white/90 bg-white/[0.06] px-2 py-1 text-sm rounded-none",
};
---

<div class={`${base} ${variants[variant]}`}>
  <span>{title}</span>
</div>
